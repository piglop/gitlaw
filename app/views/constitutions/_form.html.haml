= bootstrap_form_for @constitution, :html => { :class => 'form-horizontal' } do |f|
  = f.hidden_field :base_id
  = f.text_field :title, class: 'input-block-level'
  = f.text_area :text, class: 'input-block-level', rows: 10
  
  .form-actions
    = f.submit t('.submit'), :class => 'btn btn-primary'
    = link_to t('.cancel'), constitutions_path, :class => 'btn'
